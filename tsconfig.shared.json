{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist/shared",
    "rootDir": "./shared",
    "strict": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ES2022"
  },
  "include": ["shared/**/*"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
